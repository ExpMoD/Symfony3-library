@import "fonts.styl"


*
  font-family: "Roboto"


.wrapper
  margin 20px auto
  width 900px

  .block
    border 1px solid #999
    border-radius 5px
    margin-bottom 10px
    padding 10px

    &.header
      height 50px
      padding 0
      display flex

      .header-title
        color #555
        font-weight: bold
        font-size: 20px
        flex-grow 1
        justify-content start !important

        text-decoration: none

        &:hover
          color: #000

      .header-subblock
        height: 100%
        display flex
        justify-content center
        align-items center
        padding-left: 10px
        padding-right: 10px

      .button
        color #555
        text-decoration: none

        &:hover
          color: #000

    &.block-alert
      display: flex
      justify-content center
      align-items center
      height: 30px

      &.block-alert-success
        background-color: #d4ffc3

      &.block-alert-error
        background-color: #ffc1c1

    &.body
      min-height 300px

      .subtitle
        font-size: 18px
        text-align: center
        border-bottom: 1px solid #888888
        padding-bottom: 10px
        margin-bottom: 10px

.form-error
  font-size 12px
  color #ab0815







.book-list-row
  display flex

  border-bottom: 1px solid #888888

  padding-top 10px
  padding-bottom: 10px

  margin-bottom: 5px
  margin-top: 5px

  align-items center


  .book-list-row-name
    padding-left: 10px
    width: 350px

  .book-list-row-author
    flex-grow 1

  .book-list-row-button_block
    width: 150px






.book-upload-preview-image
  margin-top: 10px
  margin-bottom: 5px
  border: 1px solid #828282
  max-width: 70px
  max-height: 70px

  display: flex
  justify-content center

  img
    max-width: 70px
    max-height: 70px

.book-upload-preview-file
  margin-top: 10px
  margin-bottom: 5px
  padding: 5px
  border: 1px solid #828282
  display: inline-block


.image-container
  -webkit-background-size: cover
  background-size: cover
  background-position: center center;